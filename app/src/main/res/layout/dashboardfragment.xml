<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyblack"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cls">


        <TextView
            android:id="@+id/tv_title_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CatchApp"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/add_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black2"
        app:layout_constraintTop_toBottomOf="@id/cls"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="August 10 1999"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/public_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/public_icon"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp" />


            <TextView
                android:id="@+id/tv_post_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is Journal"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/baloo"/>
            

            <TextView
                android:id="@+id/tv_d"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_post_t"
                android:text="This is sample of short description of my journal"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@id/tv_post_t"/>
            
            <TextView
                android:id="@+id/btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="View Journal"
                app:layout_constraintTop_toBottomOf="@id/tv_d"
                android:background="@drawable/custom_btn"
                app:layout_constraintLeft_toLeftOf="@id/tv_d"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published by"
                app:layout_constraintTop_toBottomOf="@id/btn"
                app:layout_constraintLeft_toLeftOf="@id/btn"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal info"
                app:layout_constraintTop_toBottomOf="@id/btn"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/white"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl1"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p"
                app:layout_constraintLeft_toLeftOf="@id/tv_p">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/samplepic"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leandrei Santos"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/cv1"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textColor="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/tv_f"
                    app:layout_constraintLeft_toRightOf="@id/cv1"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv_pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages:10"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="50dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    app:layout_constraintTop_toBottomOf="@id/tv_pages"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="60dp"
                    android:textColor="@color/white"/>






            </androidx.constraintlayout.widget.ConstraintLayout>





            





        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black2"
        app:layout_constraintTop_toBottomOf="@id/cv1"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="August 10 1999"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/public_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/public_icon"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp" />


            <TextView
                android:id="@+id/tv_post_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Love Teaching"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/baloo"/>


            <TextView
                android:id="@+id/tv_d2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_post_t2"
                android:text="This is sample of short description of my journal"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@id/tv_post_t2"/>

            <TextView
                android:id="@+id/btn2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="View Journal"
                app:layout_constraintTop_toBottomOf="@id/tv_d2"
                android:background="@drawable/custom_btn"
                app:layout_constraintLeft_toLeftOf="@id/tv_d2"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published by"
                app:layout_constraintTop_toBottomOf="@id/btn2"
                app:layout_constraintLeft_toLeftOf="@id/btn2"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_i2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal info"
                app:layout_constraintTop_toBottomOf="@id/btn2"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/white"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl12"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_p2"
                app:layout_constraintLeft_toLeftOf="@id/tv_p2">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/samplepic2"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_f2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Billy"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/cv12"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv_s2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher"
                    android:textColor="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/tv_f2"
                    app:layout_constraintLeft_toRightOf="@id/cv12"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv_pages2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages:10"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="50dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    app:layout_constraintTop_toBottomOf="@id/tv_pages2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="60dp"
                    android:textColor="@color/white"/>






            </androidx.constraintlayout.widget.ConstraintLayout>











        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>